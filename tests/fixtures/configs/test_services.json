{
  "services": {
    "test_validation_service": {
      "steps": [
        {
          "name": "validation_step",
          "module": "components.validation",
          "class": "ValidationComponent",
          "config": {
            "required_fields": ["user_id", "data"]
          }
        }
      ]
    },
    "test_transformation_service": {
      "steps": [
        {
          "name": "transform_step",
          "module": "components.transformation",
          "class": "TransformationComponent",
          "config": {
            "transform_type": "uppercase"
          }
        }
      ]
    },
    "test_multi_step_service": {
      "steps": [
        {
          "name": "validation",
          "module": "components.validation",
          "class": "ValidationComponent",
          "config": {
            "required_fields": ["data"]
          }
        },
        {
          "name": "transformation",
          "module": "components.transformation",
          "class": "TransformationComponent",
          "config": {
            "transform_type": "normalize"
          }
        },
        {
          "name": "persistence",
          "module": "components.persistence",
          "class": "PersistenceComponent",
          "config": {
            "output_dir": "./test_output",
            "format": "json"
          }
        }
      ]
    },
    "test_simple_service": {
      "steps": [
        {
          "name": "simple_step",
          "module": "components.pre_calibration",
          "class": "PreCalibrationComponent",
          "config": {}
        }
      ]
    },
    "test_error_handling_service": {
      "steps": [
        {
          "name": "validation_with_strict",
          "module": "components.validation",
          "class": "ValidationComponent",
          "config": {
            "required_fields": ["mandatory_field"]
          },
          "on_error": "fail_fast"
        },
        {
          "name": "transformation_fallback",
          "module": "components.transformation",
          "class": "TransformationComponent",
          "config": {
            "transform_type": "uppercase"
          },
          "on_error": "skip",
          "fallback_output": {
            "transform_failed": true,
            "fallback_data": "default_output"
          }
        }
      ]
    }
  }
}