{
  "interceptors": {
    "logging": {
      "module": "interceptors.logging",
      "class": "LoggingInterceptor",
      "enabled": true,
      "order": 1,
      "config": {
        "log_level": "INFO",
        "log_request": true,
        "log_response": true,
        "log_errors": true,
        "provide_context_logger": true,
        "destinations": ["stdout", "file"],
        "file_path": "logs/service.log",
        "log_format": "[%(levelname)s] %(asctime)s | %(name)s | %(message)s",
        "date_format": "%Y-%m-%d %H:%M:%S"
      }
    },
    "validation": {
      "module": "interceptors.validation",
      "class": "ValidationInterceptor",
      "enabled": true,
      "order": 2,
      "config": {
        "validate_request": true,
        "validate_response": false,
        "strict_mode": false,
        "required_fields": ["service_id"],
        "max_payload_size": 1048576
      }
    },
    "authentication": {
      "module": "interceptors.authentication",
      "class": "AuthenticationInterceptor",
      "enabled": false,
      "order": 3,
      "config": {
        "auth_type": "bearer",
        "validate_token": true,
        "bypass_services": ["health-check", "status"],
        "required_headers": ["Authorization"]
      }
    },
    "rate_limiting": {
      "module": "interceptors.rate_limiting",
      "class": "RateLimitingInterceptor",
      "enabled": false,
      "order": 4,
      "config": {
        "requests_per_minute": 100,
        "burst_size": 10,
        "rate_limit_by": "client_id",
        "exclude_services": ["health-check"]
      }
    },
    "metrics": {
      "module": "interceptors.metrics",
      "class": "MetricsInterceptor",
      "enabled": true,
      "order": 5,
      "config": {
        "collect_latency": true,
        "collect_errors": true,
        "collect_throughput": true,
        "export_interval": 60,
        "percentiles": [50, 90, 95, 99]
      }
    }
  },
  "global_config": {
    "error_handling": "propagate",
    "timeout": 30000,
    "async_execution": false
  }
}
